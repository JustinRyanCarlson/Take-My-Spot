<div class="container">
    <h3 class="text-center">Property List</h3>
    <hr>
    <div class="row">
        {{#each Owners}}
        <div class="col-sm-4">
            <div class="panel panel-default">
                <div class="panel-body">
                    <h5 class="text-center">Address: {{this.address}}, {{this.city}} {{this.state}}</h5>
                    <h5 class="text-center">Price: ${{this.price}}/hr</h5>
                </div>
            </div>
        </div>
        {{/each}}
    </div>
    <br>
    <div class="row">
        <div class="col-sm-12">
            <div class="text-center">
                <button class="btn btn-primary" id="submit-button" data-toggle="modal" onClick="window.location='/owner'" ;>Add More Properties</button>
            </div>
        </div>
    </div>
</div>
